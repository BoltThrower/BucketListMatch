<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    
    <!-- Custom theme for Bucket List Match -->
    <style name="Theme.BucketList" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Theme.BucketList.ActionBar</item>
        <item name="spinnerDropDownItemStyle">@style/Theme.BucketList.DropDownItem.Spinner</item>
        
    </style>
    
    <!-- Custom theme for Bucket List Match without action bar -->
    <style name="Theme.BucketList.NoActionBar" parent="Theme.Sherlock.Light.NoActionBar">
        
    </style>

    <!-- Style for the action bar -->
    <style name="Theme.BucketList.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="displayOptions">showHome|useLogo</item>
        <item name="background">#0080ff</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <!-- Style for the dropdown menu -->
    <style name="Theme.BucketList.DropDownItem.Spinner" parent="Widget.Sherlock.Light.DropDownItem.Spinner">
        <item name="android:popupBackground">#ffffff</item>
        <item name="android:textColor">#000000</item>
    </style>
    
</resources>